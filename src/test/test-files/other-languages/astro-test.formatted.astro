---

const title = "Product Card";
---

<div title={title}>
  <div class="container mx-auto py-8">
    <div class="bg-white shadow-md rounded-lg overflow-hidden max-w-sm mx-auto border border-gray-200">
      <img src="/product-image.jpg" alt="Product Image" class="w-full h-48 object-cover object-center">
      <div class="p-4 sm:p-6 md:p-8 space-y-4">
        <h2 class="text-xl font-bold text-gray-800 sm:text-2xl">Premium Headphones</h2>
        <p class="text-gray-600 text-sm">High-quality wireless headphones with noise cancellation technology and premium sound.</p>
        <div class="flex justify-between items-center mt-4">
          <span class="text-gray-900 font-bold text-lg">$199.99</span>
          <button class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg text-sm transition duration-200">Add to Cart</button>
        </div>
      </div>
    </div>
  </div>
</div>